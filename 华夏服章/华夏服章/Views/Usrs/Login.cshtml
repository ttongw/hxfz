
@model Models.Usr
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>华夏服章-登录</title>
  
    <link href="~/Content/css/Login.css" rel="stylesheet" />
</head>
<body>
    <div>
        <header>
            <div class="content">
               
            </div>
        </header>
        <section>
           
            <div class="content">
                <div class="content_bg">
                    @using (Ajax.BeginForm("Login", "Usrs", new AjaxOptions() { HttpMethod = "Post", OnComplete = "complete" }, new { @id = "mainform" }))
                    {
                        <div class="formheader">
                            <label id="hlkNormalLogin" style="color: #32A5E7">用户登录</label>&nbsp;&nbsp;&nbsp;&nbsp; | &nbsp;&nbsp;&nbsp;
                           
                            @Html.ActionLink("用户注册", "Register", "Usrs", null, new { @id = "hlkNormalRegister", style = "color: #E5E5E5" })
                        </div>
                        <div class="normalInput normaluser">
                            @Html.TextBoxFor(m => m.UsrId, new { @id = "txtUser", placeholder = "用户名", style = "height: 46px;width: 80%;", maxlength = "32" })
                            <div class="usertip"></div>
                        </div>
                            <div class="normalInput normalpassword">
                                @Html.TextBoxFor(m => m.Pwd, new { @id = "txtPassword", placeholder = "密码", type = "password", style = "height: 46px;width: 80%;float: left;", maxlength = "20" })
                                <span class="iconfont showpassword" style="display: none;font-size: 40px;">&#xe80b;</span>
                                <span class="iconfont hidepassword" style="display: block;font-size: 40px;">&#xe6a2;</span>
                                <div class="passtip"></div>
                            </div>
                            <input type="submit" value="登录" class="cssbtnRegister" style="color: white;font-size: 14px; background-color: #32A5E7; height: 46px; width: 300px;" />
                            <label class="wjmm">忘记密码</label>
                    }
                    <br />
                </div>
            </div>
        </section>

    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>  
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Content/js/Login.js"></script>
    <script type="text/javascript">


    $(function () {
        $(".text1").css("padding-left", "221px");
        $(".text1").fadeIn(2000);
        $(".text1").css("margin", "40px 0px 0px 0px");
        setTimeout(function() {
            $(".text2").fadeIn(2000);
            $(".text1").css("padding-left", "0px");
            $(".text2").css("margin", "88px 0px 0px 0px");
        }, 2000);

    });
    </script>
</body>
</html>