@model Models.Relic
@{
    ViewBag.Title = "文物详情页";
}

<link href="~/css/relic/font-awesome.min.css" rel="stylesheet" />
<link href="~/css/relic/font1.css" rel="stylesheet" />
<link href="~/css/relic/font2.css" rel="stylesheet" />
<link href="~/css/relic/index.css" rel="stylesheet" />
<link href="~/css/relic/style.css" rel="stylesheet" />

<style>
    .img-box {
        position: relative;
        overflow: hidden;
        width: 100%;
    }
</style>
<div class="img-box" style="height: 400px;">
    <img src="~/Photos/RelicDetail.jpg" alt="" class="narrower">
</div>

<div class="using-border py-3">
    <div class="inner_breadcrumb  ml-4">
        <ul class="short_ls">
            <li>
                <a href="~/Views/Relic/RelicIndex.cshtml">文物之声</a>
                <span>/ /</span>
            </li>
            <li>详情</li>
        </ul>
    </div>
</div>
<section class="blog py-lg-4 py-md-3 py-sm-3 py-3" id="blog">
    <div class="container py-lg-5 py-md-4 py-sm-4 py-3">
        <div class="row">
            <div class="col-lg-3 mb-lg-0 mb-md-5 mb-sm-4 mb-3">
                <div class="rotated-title ">
                    <h3 class="title  mb-md-4 mb-sm-3 mb-3">Details</h3>
                    <h6 class="title-sub">Describle</h6>
                </div>
            </div>
            <div class="col-lg-4 color-img-three my-3">
                <img src="~/Photos/@Model.Himage" height="300" width="400" alt="news image" class="img-fluid">
            </div>
            <div class="col-lg-5 blog-left-sub my-3">
                <h4 class="pb-3">
                    <a href="single.html"> @Model.name</a>
                </h4>
                <p>
                    @Model.describle
                </p>
            </div>
        </div>
        <div class="row mt-lg-5 mt-md-4 mt-3">
            <div class="col-lg-6 blog-left-sub my-3">
                <p>
                    @Model.describle
                </p>
                <div class="row mt-lg-4 mt-3">
                    <div class="col-lg-6 col-md-6 col-sm-6 blog-date-time text-sm-right ">
                        <ul>
                            <li>
                                朝代
                                <a href="single.html" class="pl-1">@Model.Rsort.dynasty</a>
                            </li>
                            <li>
                                博物馆
                                <a href="single.html" class="pl-1">@Model.zone</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 color-img-three my-3">
                <img src="~/Photos/@Model.Himage" height="300" width="400" alt="news image" class="img-fluid">
            </div>
        </div>
    </div>
</section>

